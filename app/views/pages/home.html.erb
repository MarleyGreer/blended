<div class="home-page">
  <div class="home-banner">
    <h3>Browse & Book All Things Beauty </h3>
  </div>

  <h5>Browse Artists </h5>

<div class="cards d-flex">
<% @artists.each do |artist| %>

<%= link_to artist_path(artist) do %>


<div class="home-card p-3 m-1">
  <div class="card-top">
  <%= cl_image_tag artist.user.photo.key, height: 80, width: 80, gravity: :face, crop: :fill, radius: :max, class: "card-avatar rounded-circle" %>
  <%= cl_image_tag artist.photos[0].key, height: 200, width: 400, gravity: :face, crop: :fill, class: "card-img"%>
  </div>
  <div class="card-bottom d-flex justify-content-between">
    <div class="mt-3">
     <h6> <%= artist.user.first_name %> <%= artist.user.last_name %> </h6>
     <p> <%= artist.user.address %> </p>
    </div>
    <div class="card-rating">
      <h6>
        <i class="fas fa-star rating"></i>
        <i class="fas fa-star rating"></i>
        <i class="fas fa-star rating"></i>
        <i class="fas fa-star rating"></i>
        <i class="fas fa-star rating"></i>
      </h6>

    </div>
  </div>
</div>
<% end %>
<% end %>
</div>
</div>
