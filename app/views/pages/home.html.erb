<div class="home-page">
  <div class="home-banner">
    <h1>Browse over 2000+ makeup artists</h1>
    <div class="home-search">
      <%= form_tag artists_path, method: :get, class: "in-line" do %>
      <%= text_field_tag :query,
      params[:query],
      class: "location-form",
      placeholder: "Search by location"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <br>
  <h5>Featured Artists</h5>
  <br>
  <div class="cards d-flex">
    <% @artists.each do |artist| %>
      <%= link_to artist_path(artist) do %>
        <div class="card p-3 m-1">
          <%= cl_image_tag artist.photos[0].key, height: 200, width: 400, gravity: :face, crop: :fill, class: "card-img"%>
          <div class="d-flex justify-content-between">
            <div class="mt-3">
             <h6><%= artist.user.first_name %> <%= artist.user.last_name %></h6>
             <p><i class="fas fa-map-marker-alt fa-lg"></i> <%= artist.user.address %></p>
            </div>
            <div class="card-rating">
              <h6>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
              </h6>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <hr></hr>
  <br>
  <h5>Recently Added</h5>
  <br>
  <div class="cards d-flex">
    <% @recently_added.each do |artist| %>
      <%= link_to artist_path(artist) do %>
        <div class="card p-3 m-1">
          <%= cl_image_tag artist.photos[0].key, height: 200, width: 400, gravity: :face, crop: :fill, class: "card-img"%>
          <div class="d-flex justify-content-between">
            <div class="mt-3">
             <h6><%= artist.user.first_name %> <%= artist.user.last_name %></h6>
             <p><i class="fas fa-map-marker-alt fa-lg"></i> <%= artist.user.address %></p>
            </div>
            <div class="card-rating">
              <h6>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
                <i class="fas fa-star rating"></i>
              </h6>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
