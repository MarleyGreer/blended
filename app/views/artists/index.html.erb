<div class="d-flex align-items-center justify-content-between p-3 bg-white">
  <%= link_to root_path do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>

  <%= form_tag artists_path, method: :get, class: "in-line" do %>
    <%= collection_select(:artist, :category, @artists, :category, :category, @categoryselect, html_options = { class: "form-control", id: "category-selector", onchange: "this.form.submit()" }) %>
    <%= link_to "Clear filters", artists_path, class: "btn btn-outline-dark selectbutton" %>
  <% end %>
</div>

<br>
<% @artists.each do |artist| %>
  <%= link_to artist_path(artist) do %>
    <div class="index-card">
      <%= cl_image_tag artist.photos[0].key, height: 200, width: 400, gravity: :face, crop: :fill, class: "card-img-top", style: "border-top-left-radius: 8px; border-top-right-radius: 8px;" %>
      <div class="d-flex justify-content-between">
        <div class="pt-3 pl-3">
         <h6><%= artist.user.first_name %> <%= artist.user.last_name %></h6>
         <p><%= artist.category if artist.category %></p>
         <p><i class="fas fa-map-marker-alt fa-lg"></i>  <%= artist.user.address %></p>
        </div>
        <div class="card-rating">
          <h6>
            <i class="fas fa-star rating"></i>
            <i class="fas fa-star rating"></i>
            <i class="fas fa-star rating"></i>
            <i class="fas fa-star rating"></i>
            <i class="fas fa-star rating"></i>
          </h6>
        </div>
      </div>
    </div>
  <% end %>
  <br>
<% end %>

<div style="text-align: center">
  <button type="button" class="map-btn" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="far fa-map"></i></button>
  <%= render 'artists/map_modal' %>
</div>
