<div class="d-flex align-items-center justify-content-between p-3 bg-white">
    <%= link_to artists_path(@artist) do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>

  <h6 class = "text-center">reply to review</h6>
  <%= link_to user_path(current_user) do %>
    <%= cl_image_tag current_user.photo.key, height: 48, width: 48, gravity: :face, crop: :fill, radius: :max, class: "rounded-circle" %>
  <% end %>
  </div>

  <div class="container mt-4">
    <div class="bg-white p-5" style="border-radius: 20px 20px 20px 20px;">
      <%= simple_form_for(@review) do |f| %>
        <%= f.input :reply, label: "Your reply" %>
        <%= f.submit "Reply to #{@review.booking.user.first_name}", class: "btn btn-details", style: "width: 100%; margin-top: 10px" %>
      <% end %>
    </div>
</div>
