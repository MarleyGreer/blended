<% if user_signed_in? %>
<div class="container bottom-padding mt-3">
  <div class="bg-white p-2" style="border-radius: 20px 20px 20px 20px; text-align: center;">

    <br>
    <h3><%= "Hello #{@user.first_name}" %></h3>
    <br>
    <div style="text-align: center">
      <%= cl_image_tag current_user.photo.key, height: 100, width: 100, gravity: :face, crop: :fill, radius: :max, class: "rounded-circle" %>

    </div >
    <br><p style="font-weight:bold; font-size:18px;"><%= @user.first_name %> <%= @user.last_name %></p>
    <p><i class="fas fa-map-marker-alt fa-lg pr-1"></i> <%= @user.address %></p>
    <p>Member since <%= @user.created_at.strftime("%d %B %Y") %></p>

    <br>
    <% if @user.artist.nil? %>
      <div class="nav-tile">
        <i class="fas fa-portrait"></i>
        <br>
        <%= link_to "Become an artist", new_artist_path %>
      </div>
    <% end %>

    <% unless @user.artist.nil? %>
      <div class="nav-tile">
        <i class="fas fa-portrait"></i>
        <br>
        <%= link_to "My artist page", artist_path(id: @user.artist) %>
      </div>
    <% end %>

    <div class="nav-tile">
      <i class="far fa-calendar-alt"></i>
      <br>
      <%= link_to "My bookings", bookings_path %>
    </div>

    <% unless @user.artist.nil? %>
      <div class="nav-tile">
        <i class="fas fa-people-arrows"></i>
        <br>
        <%= link_to "My jobs", all_bookings_path %>
      </div>
    <% end %>

    <div class="nav-tile">
      <i class="fas fa-cog"></i>
      <br>
      <%= link_to "Edit Account", edit_user_registration_path %>
    </div>

    <div class="nav-tile">
      <i class="fas fa-sign-out-alt"></i>
      <br>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
    </div>

    <br><br>

  </div>
</div>
<% end %>

