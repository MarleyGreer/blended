<div id="accordion">

  <% @artist.services.each do |service| %>
  <div class="card">
    <div class="card-header" id="heading<%= service.id %>">
      <h5 class="mb-0">
        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%= service.id %>" aria-expanded="false" aria-controls="collapse<%= service.id %>">
          <%= service.name.capitalize %>
        </button>
      </h5>
    </div>
    <div id="collapse<%= service.id %>" class="collapse" aria-labelledby="heading<%= service.id %>" data-parent="#accordion">
      <div class="card-body">
        <strong> Price </strong>
        <br>
        $<%= service.price %> AUD
        <br><br>
        <strong> Duration </strong>
        <br>
        <%= service.duration %> Minutes
        <br><br>
        <strong>Description </strong>
        <br>
        <%= service.description %>
      </div>
    </div>
  </div>
  <% end %>
</div>
