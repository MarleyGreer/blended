<div id="accordion">

  <% @artist.services.each do |service| %>
  <div class="card">
    <div class="card-header" id="heading<%= service.id %>">
      <h6 class="mb-0">
        <button class="btn collapsed font" data-toggle="collapse" data-target="#collapse<%= service.id %>" aria-expanded="false" aria-controls="collapse<%= service.id %>">
          <%= service.name.capitalize %>
          <% if current_user == @artist.user %>
            <%= link_to edit_service_path(service) do %>
              <i class="fas fa-pen-square rating ml-2"></i>
            <% end %>

            <%= link_to service_path(service), method: :delete, class: "delete" do %>
              <i class="far fa-minus-square rating ml-2"></i>
            <% end %>
          <% end %>
        </button>
      </h6>
    </div>
    <div id="collapse<%= service.id %>" class="collapse" aria-labelledby="heading<%= service.id %>" data-parent="#accordion">
      <div class="card-body">
        <strong> Price </strong>
        <br>
        $<%= service.price %> AUD
        <br><br>
        <strong> Duration </strong>
        <br>
        <%= service.duration %> Minutes
        <br><br>
        <strong>Description </strong>
        <br>
        <%= service.description %>
      </div>
    </div>
  </div>
  <% end %>
</div>
